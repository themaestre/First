<resources>
    <!-- Base application theme. -->
    <style name="Theme.First" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>
    <style name="ActionTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/gold</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--        <item name="alertDialogStyle">@style/MyDialog</item>-->
        <!--                <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/gold</item>
    </style>

    <style name="Theme.First.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.First.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.First.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomNavigation">
        <item name="itemIconTint">@color/bottomselector</item>
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottomselector</item>
    </style>
</resources>